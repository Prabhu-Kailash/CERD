<% layout('layouts/boilerplate') %>
<div class="container mt-5">
    <div class="row">
            <h1 class="text-center">New Staff</h1>
            <form action="/staff" method="POST" class="needs-validation" novalidate>

                <!-- staff Details Section -->
                
                <div class="row mb-2">
                    <div class="col">
                        <div>
                            <label class="form-label" for="name">Staff Name:</label>
                            <input class="form-control" type="text" id="name" name="staff[name]" required>
                        </div>
                    </div>
                    <div class="col">
                        <div>
                            <label class="form-label" for="aadhar">Aadhar Number:</label>
                            <input class="form-control" type="number" id="aadhar" name="staff[aadhar]" required>
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="DOB">Date of Birth:</label>
                    <input class="form-control" type="date" id="DOB" name="staff[DOB]" data-provide="datepicker" required>
                </div>
                
                <div class="row mb-3">
                    <div class="col">
                      <input type="text" class="form-control" name="staff[religion]" placeholder="Religion" aria-label="Religion">
                    </div>
                    <div class="col">
                      <input type="text" class="form-control" name="staff[caste]" placeholder="Caste" aria-label="Caste">
                    </div>
                </div>

                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" ng-model="gender" name="staff[gender]" id="Male" value="Male" ng-checked="true" checked>
                    <label class="form-check-label" for="Male">
                      Male
                    </label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" ng-model="gender" name="staff[gender]" id="Female" value="Female">
                    <label class="form-check-label" for="Female">
                      Female
                    </label>
                </div>

                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" ng-model="detail" name="staff[detail]" id="Tech" value="Tech" ng-checked="true" checked>
                    <label class="form-check-label" for="Tech">
                      Technical Staff
                    </label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" ng-model="detail" name="staff[detail]" id="NonTech" value="NonTech">
                    <label class="form-check-label" for="NonTech">
                      Non-Technical Staff
                    </label>
                </div>

                <div class="row justify-content-center">
                    <div class="col-1">
                        <hr style="border: 7px none grey; border-top-style: dotted; background-color: white;">
                    </div>
                </div>

                <!-- Parent's Details Section -->

                <h1 class="text-center">Parent's Details</h1>
                
                <div class="row mb-3">
                    <div class="col">
                        <label class="form-label" for="FName">Father's Name:</label>
                        <input type="text" name="staff[fatherName]" id="FName" class="form-control" placeholder="Father's Name" aria-label="Father's Name">
                    </div>
                    <div class="col">
                        <label class="form-label" for="MName">Mother's Name:</label>
                        <input type="text" name="staff[motherName]" id="MName" class="form-control" placeholder="Mother's Name" aria-label="Mother's Name">
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col">
                        <input type="text" name="staff[doorNumber]" id="DoorNo" class="form-control" placeholder="Door Number" aria-label="Door Number" required>
                    </div>
                    <div class="col">
                        <input type="text" name="staff[streetName]" id="streetName" class="form-control" placeholder="Street Name" aria-label="Street Name" required>
                    </div>
                    <div class="col">
                        <input type="text" name="staff[cityName]" id="cityName" class="form-control" placeholder="City" aria-label="City" required>
                    </div>
                    <div class="col">
                        <input type="number" name="staff[pincode]" id="pincode" class="form-control" placeholder="Pincode" aria-label="Pincode" required>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col">
                        <label class="form-label" for="mainContact">Main Contact Number: (Only Mobile Number)</label>
                        <input type="number" name="staff[mainContact]" id="mainContact" class="form-control" required>
                    </div>
                    <div class="col">
                        <label class="form-label" for="alternateContact">Alternate Contact Number:</label>
                        <input type="number" name="staff[alternateContact]" id="alternateContact" class="form-control">
                    </div>
                </div>

                <div class="row justify-content-center">
                    <div class="col-1">
                        <hr style="border: 7px none grey; border-top-style: dotted; background-color: white;">
                    </div>
                </div>

                <!-- Admission Details -->

                <h1 class="text-center">Joining Details</h1>

                <div class="row mb-3">
                    <div class="col">
                        <label class="form-label" for="admissionNumber">Staff ID:</label>
                        <input type="number" name="staff[admissionNumber]" id="admissionNumber" class="form-control" required>
                    </div>
                    <div class="col">
                        <label class="form-label" for="DOJ">Date of Joining:</label>
                        <input class="form-control" type="date" id="DOJ" name="staff[DOJ]" data-provide="datepicker" required>
                    </div>
                </div>

                <div class="row justify-content-center my-3 text-center">
                    <div class="col">
                        <button class="btn btn-success mb-2">Submit</button>
                    </div>
                </div>

            </form>
    </div>
</div>

<%- include('../partials/validateForm') %>
